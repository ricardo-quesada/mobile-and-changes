<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center">

<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="20dip"
    android:paddingBottom="20dip"
	android:paddingLeft="2dip"
	android:paddingRight="2dip">


	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="270dip"
		android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:padding="1dip">
    		<ImageView android:src="@drawable/icon_os"
				android:layout_width="60dip"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:paddingLeft="1dip"
				android:paddingRight="1dip"/>
			<TableLayout 	
				android:layout_width="206dip"
				android:layout_height="wrap_content"
				android:paddingTop="6dip"
				android:paddingBottom="6dip"
				android:stretchColumns="1"
				android:shrinkColumns="1">
    			<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center">
			        <TextView
						android:layout_width="120dip"
						android:layout_height="wrap_content"
						android:gravity="left"
			           	style="@style/TextFont"
			            android:text="OS Version:"
			            android:padding="1dip" />
			        <TextView
				        android:id="@+id/osVersionVal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="left"
			           	style="@style/TextFont"
			            android:text="Fetching.."
			            android:padding="1dip" />
			    </TableRow>
    			<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center">
			        <TextView
						android:layout_width="120dip"
						android:layout_height="wrap_content"
						android:gravity="left"
			        	style="@style/TextFont"
			            android:text="Model:"
			            android:padding="1dip"/>
			        <TextView
				        android:id="@+id/phoneModelVal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="left"
			        	style="@style/TextFont"
			            android:text="Fetching.."
			            android:padding="1dip"/>
		    </TableRow>
		</TableLayout>
	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="270dip"
		android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:padding="1dip">
    		<ImageView android:src="@drawable/icon_mem"
				android:layout_width="60dip"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:paddingLeft="1dip"
				android:paddingRight="1dip"/>
			<TableLayout 	
				android:layout_width="206dip"
				android:layout_height="wrap_content"
				android:paddingTop="6dip"
				android:paddingBottom="6dip"
				android:stretchColumns="1"
				android:shrinkColumns="1">
    			<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center">
			        <TextView
						android:layout_width="120dip"
						android:layout_height="wrap_content"
						android:gravity="left"
			           	style="@style/TextFont"
			            android:text="Memory Total:"
			            android:padding="1dip" />
			        <TextView
				        android:id="@+id/memoryTotalVal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="left"
			           	style="@style/TextFont"
			            android:text="Fetching.."
			            android:padding="1dip" />
			    </TableRow>
    			<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center">
			        <TextView
						android:layout_width="120dip"
						android:layout_height="wrap_content"
						android:gravity="left"
			        	style="@style/TextFont"
			            android:text="Memory Free:"
			            android:padding="1dip"/>
			        <TextView
				        android:id="@+id/memoryFreeVal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="left"
			        	style="@style/TextFont"
			            android:text="Fetching.."
			            android:padding="1dip"/>
		    </TableRow>
		</TableLayout>
	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="270dip"
		android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:padding="1dip">
    		<ImageView android:src="@drawable/icon_bat"
				android:layout_width="60dip"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:paddingLeft="1dip"
				android:paddingRight="1dip"/>
			<TableLayout 	
				android:layout_width="206dip"
				android:layout_height="wrap_content"
				android:paddingTop="6dip"
				android:paddingBottom="6dip"
				android:stretchColumns="1"
				android:shrinkColumns="1">
    			<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center">
			        <TextView
						android:layout_width="120dip"
						android:layout_height="wrap_content"
						android:gravity="left"
			           	style="@style/TextFont"
			            android:text="Battery Type:"
			            android:padding="1dip" />
			        <TextView
				        android:id="@+id/batteryTypeVal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="left"
			           	style="@style/TextFont"
			            android:text="Fetching.."
			            android:padding="1dip" />
			    </TableRow>
    			<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center">
			        <TextView
						android:layout_width="120dip"
						android:layout_height="wrap_content"
						android:gravity="left"
			        	style="@style/TextFont"
			            android:text="Battery Level:"
			            android:padding="1dip"/>
			        <TextView
				        android:id="@+id/batteryLevelVal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="left"
			        	style="@style/TextFont"
			            android:text="Fetching.."
			            android:padding="1dip"/>
			    </TableRow>
    			<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center">
			        <TextView
						android:layout_width="120dip"
						android:layout_height="wrap_content"
						android:gravity="left"
			        	style="@style/TextFont"
			            android:text="Battery Status:"
			            android:padding="1dip"/>
			        <TextView
				        android:id="@+id/batteryStatusVal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="left"
			        	style="@style/TextFont"
			            android:text="Fetching.."
			            android:padding="1dip"/>
			    </TableRow>
    			<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center">
			        <TextView
						android:layout_width="120dip"
						android:layout_height="wrap_content"
						android:gravity="left"
			        	style="@style/TextFont"
			            android:text="Battery Health:"
			            android:padding="1dip"/>
			        <TextView
				        android:id="@+id/batteryHealthVal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="left"
			        	style="@style/TextFont"
			            android:text="Fetching.."
			            android:padding="1dip"/>
			    </TableRow>
		</TableLayout>
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="270dip"
		android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:padding="1dip">
    		<ImageView android:src="@drawable/icon_sig"
				android:layout_width="60dip"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:paddingLeft="1dip"
				android:paddingRight="1dip"/>
			<TableLayout 	
				android:layout_width="210dip"
				android:layout_height="wrap_content"
				android:paddingTop="6dip"
				android:paddingBottom="6dip"
				android:stretchColumns="1"
				android:shrinkColumns="1">
    			<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center">
			        <TextView
						android:layout_width="120dip"
						android:layout_height="wrap_content"
						android:gravity="left"
			           	style="@style/TextFont"
			            android:text="Signal:"
			            android:padding="1dip" />
			        <TextView
				        android:id="@+id/signalVal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="left"
			           	style="@style/TextFont"
			            android:text="Fetching.."
			            android:padding="1dip" />
			    </TableRow>
    			<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center">
			        <TextView
						android:layout_width="120dip"
						android:layout_height="wrap_content"
						android:gravity="left"
			        	style="@style/TextFont"
			            android:text="Carrier:"
			            android:padding="1dip"/>
			        <TextView
				        android:id="@+id/carrierVal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="left"
			        	style="@style/TextFont"
			            android:text="Fetching.."
			            android:padding="1dip"/>
			    </TableRow>
    			<TableRow
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center">
			        <TextView
						android:layout_width="120dip"
						android:layout_height="wrap_content"
						android:gravity="left"
			        	style="@style/TextFont"
			            android:text="Roaming:"
			            android:padding="1dip"/>
			        <TextView
				        android:id="@+id/roamingVal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="left"
			        	style="@style/TextFont"
			            android:text="Fetching.."
			            android:padding="1dip"/>
			    </TableRow>
		</TableLayout>
	</LinearLayout>
	
</LinearLayout>
</ScrollView>